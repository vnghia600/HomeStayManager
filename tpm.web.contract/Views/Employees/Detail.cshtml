@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    label {
        color: #FF0000
    }
</style>

<div class="content-wrapper">
    <div class="content-inner">
        <div class="page-header page-header-light shadow">
            <div class="page-header-content d-lg-flex border-top">
                <div class="d-flex">
                    <div class="breadcrumb py-2">
                        <a asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="ph-house"></i></a>
                        <span class="breadcrumb-item active">Nhân Viên</span>
                        <span class="breadcrumb-item active"><a asp-controller="NhanVien" asp-action="Index">DS Nhân Viên</a></span>
                        <span class="breadcrumb-item active"><a asp-controller="NhanVien" asp-action="Details">Thông Tin Nhân Viên</a></span>

                    </div>

                    <a href="#breadcrumb_elements"
                       class="btn btn-light align-self-center collapsed d-lg-none border-transparent rounded-pill p-0 ms-auto"
                       data-bs-toggle="collapse">
                        <i class="ph-caret-down collapsible-indicator ph-sm m-1"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="content">
            <div class="card">
                <h6 style="font-size: 30px; text-align: center;margin: 15px 0px;color: #0066FF; ">THÔNG TIN NHÂN VIÊN</h6>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" />
                    <fieldset style="margin: 15px !important;">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label  class="form-label ">Tên NV: </label>
                                    @*@Html.DisplayFor(model => model.TenNv)*@
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label class="form-label ">Giới Tính: </label>
                                    <span>@(Model.GioiTinh == 1 ? "Nam" : "Nữ")</span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label class="form-label ">SĐT: </label>
                                    @*@Html.DisplayFor(model => model.Sdt)*@
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label class="form-label ">Email: </label>
                                    @*@Html.DisplayFor(model => model.Email)*@
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label class="form-label">Ngày Sinh: </label>
                                    <span>@Model.NgaySinh.ToString("dd/MM/yyyy").Replace(" ","/")</span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label class="form-label ">Nơi Sinh: </label>
                                    @*@Html.DisplayFor(model => model.NoiSinh)*@
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label class="form-label ">Địa Chỉ: </label>
                                    @*@Html.DisplayFor(model => model.DiaChi)*@
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label class="form-label ">CCCD: </label>
                                    @*@Html.DisplayFor(model => model.Cccd)*@
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label @*asp-for="NgayCap"*@ class="form-label">Ngày Cấp: </label>
                                    <span>@Model.NgayCap.ToString("dd/MM/yyyy").Replace(" ","/")</span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label @*asp-for="NoiCap"*@ class="form-label ">Nơi Cấp: </label>
                                    @*@Html.DisplayFor(model => model.NoiCap)*@
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label @*asp-for="MaChucVu"*@ class="form-label">Chức Vụ: </label>
                                    @*@if (Model.MaChucVuNavigation != null)
                                    {
                                        @Html.DisplayFor(model => model.MaChucVuNavigation.TenChucVu)
                                    }*@
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label @*asp-for="MaPhongBan"*@ class="form-label">Phòng Ban: </label>
                                    @*@if (Model.MaPhongBanNavigation != null)
                                    {
                                        @Html.DisplayFor(model => model.MaPhongBanNavigation.TenPhongBan)
                                    }*@
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label @*asp-for="TinhTrang"*@ class="form-label ">Tình Trạng: </label>
                                    <span>@(Model.TinhTrang == 1 ? "Đang Làm" : "Nghỉ Việc")</span>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label @*asp-for="GiaDinh"*@ class="form-label ">Gia Đình: </label>
                                    <span>@(Model.GiaDinh == 1 ? "Có GĐ" : "Chưa có GĐ")</span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label @*asp-for="HinhAnh"*@ class="form-label">Hình Ảnh: </label>
                                    @if (ViewBag.ImageDataUrl != null)
                                    {
                                        <img src="@ViewBag.ImageDataUrl" width="100" height="100" />
                                    }
                                </div>
                            </div>

                        </div>
                    </fieldset>
                    <div style="justify-content:center !important" class="card-footer d-flex justify-content-end">
                        <a class="btn btn-primary ms-3" style="text-decoration: none;"
                           asp-action="Index">Quay Lại</a>
                        <a style="width:90px" class="btn btn-primary ms-3" style="text-decoration: none;"
                           asp-action="Edit" asp-route-id="@Model?.MaNv">Sửa</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>